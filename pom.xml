        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>org.huibudc</groupId>
    <artifactId>investment-manager-service</artifactId>
    <version>1.0-SNAPSHOT</version>
    <description>investment-manager-service</description>

    <properties>
